<nav aria-label="breadcrumb mb-5 mt-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
    <li class="breadcrumb-item"><a href="/admin/books">Könyvek</a></li>
    <li class="breadcrumb-item active" aria-current="page">Új Könyv</li>
  </ol>
</nav>

<h1>Új Könyv</h1>
<form action="/new" method="post">
<div class="row">
    <div class="col-md-6">
        <div class="form-floating mb-3">
            <input type="text"  class="form-control" id="floatingInput" placeholder="Könyv címe" name="cime" required>
            <label for="floatingInput">Könyv címe</label>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-floating mb-3">
            <input type="number"  class="form-control" id="floatingInput" placeholder="Könyv ára" name="ara" required>
            <label for="floatingInput">Könyv ára</label>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-floating mb-3">
            <input type="date"  class="form-control" id="floatingInput" placeholder="Kiadás dátuma" name="kiadas" required>
            <label for="floatingInput">Kiadás dátuma</label>
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <label for="formFile" class="form-label">Könyv borítóképe</label>
            <input class="form-control" type="file" id="formFile" name="kep">
        </div>
    </div>

    <hr>

    <div class="col-md-6">
        <div class="form-floating mb-3">
            <select class="form-select" id="floatingSelect" aria-label="Floating label select example" name="szerzo" required>
                {{#each rows1}}
                    <option value="{{this.szerzo_id}}">{{this.szerzo_nev}}</option>
                {{/each}}
            </select>
        <label for="floatingSelect">Válassz Szerzőt</label>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-floating mb-3">
            <select class="form-select" id="floatingSelect" aria-label="Floating label select example" name="kiado" required>
                {{#each rows2}}
                    <option value="{{this.kiado_id}}">{{this.kiado_nev}}</option>
                {{/each}}
            </select>
        <label for="floatingSelect">Válassz Kiadót</label>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-floating mb-3">
            <select class="form-select" id="floatingSelect" aria-label="Floating label select example" name="mufaj" required>
                {{#each rows3}}
                    <option value="{{this.mufaj_id}}">{{this.megnevezes}}</option>
                {{/each}}
            </select>
        <label for="floatingSelect">Válassz Műfajt</label>
        </div>
    </div>
</div>

<div class="d-flex justify-content-end">
    <button type="submit" class="btn btn-primary"><i class="bi bi-plus"></i> Felvétel</button>
</div>
</form>
